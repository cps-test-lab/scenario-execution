import osc.types
import osc.helpers
import osc.ros

# Test for specific value on topic
scenario test_subscriber:
    do serial:
        timeout(10)
        parallel:
            ros_run('examples_rclpy_minimal_subscriber', 'subscriber_member_function')
            
            topic_publish(topic_name: "/topic",
                            topic_type: "std_msgs.msg.String",
                            value: '{\"data\": \"test message\"}',
                            qos_profile: qos_preset_profiles!system_default_transient_local)
            serial:
                log_check('minimal_subscriber', ["test message"])
                #["I heard: \"test\""])
                emit end